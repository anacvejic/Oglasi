<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textAlignment="center"
    tools:context=".ui.view.DetaljiPozicijeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                tools:srcCompat="@drawable/ic_noimage" />

            <TextView
                android:id="@+id/tvNaziv"
                android:layout_width="304dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:fontFamily="@font/allerta"
                android:lines="2"
                android:text="Naziv"
                android:textAlignment="center"
                android:textColor="#0C0C0C"

                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPlataRang"
                android:layout_width="304dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/allerta"
                android:lines="2"
                android:text="Rang plate"
                android:textAlignment="center"
                android:textColor="#1E1E1E"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTehnologije"
                android:layout_width="304dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:fontFamily="@font/allerta"
                android:lines="2"
                android:textAlignment="center"
                android:textColor="#0C0C0C"
                android:textSize="14sp"
                android:textStyle="normal" />

            <WebView
                android:id="@+id/webvJob"
                android:layout_width="304dp"
                android:layout_height="250dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FBF8F8" />

            <WebView
                android:id="@+id/webvAboutCompany"
                android:layout_width="304dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:backgroundTint="#FBF8F8" />

            <Button
                android:id="@+id/btnShare"
                android:layout_width="304dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/allerta"
                android:text="@string/btnShare"
                android:textColor="#201632"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>